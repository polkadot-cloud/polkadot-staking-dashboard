{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "declarationMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true
  },
  "include": ["./packages/**/*", "**/*.d.ts"],
  "exclude": ["**/*/node_modules", "**/*/dist", "**/*/lottie"]
}
