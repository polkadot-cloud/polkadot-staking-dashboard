{
  "name": "polkadot-staking-dashboard",
  "version": "1.0.0",
  "type": "module",
  "license": "GPL-3.0-only",
  "scripts": {
    "g:build": "cd $INIT_CWD && tsc && vite build --base '/'",
    "g:build:verify": "cd $INIT_CWD && tsc --noEmit --skipLibCheck && vite build --base '/' --mode development --emptyOutDir",
    "g:dev": "cd $INIT_CWD && vite",
    "g:preview": "cd $INIT_CWD && vite preview",
    "clear": "npm run --workspaces clear && rm -rf build dist tsconfig.tsbuildinfo",
    "dev": "cd packages/app && yarn dev",
    "lint:check": "eslint './**' && prettier --check .",
    "lint:fix": "eslint './**' --fix && prettier --write .",
    "reset": "npm run clear && rm -rf node_modules yarn.lock && yarn",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@ledgerhq/logs": "^6.12.0",
    "@types/chroma-js": "^3.1.1",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "@w3ux/types": "^2.0.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prefer-arrow-functions": "^3.6.2",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "prettier": "^3.5.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "sass": "1.77.6",
    "tsc": "^2.0.4",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@polkadot-api/merkleize-metadata": "^1.1.14",
    "@tanstack/react-query": "^5.71.1",
    "@w3ux/hooks": "^2.0.4",
    "@w3ux/react-polkicon": "^3.0.0",
    "@w3ux/utils": "^2.0.6",
    "bignumber.js": "^9.1.2",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.4.11",
    "i18next": "^24.2.3",
    "radix-ui": "^1.1.3",
    "react": "^19.1.0",
    "react-error-boundary": "^5.0.0",
    "react-i18next": "^15.4.0",
    "simplebar": "^6.3.0",
    "simplebar-react": "^3.3.0",
    "styled-components": "^6.1.13"
  },
  "packageManager": "yarn@4.6.0",
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "endOfLine": "auto",
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
