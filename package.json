{
	"name": "polkadot-staking-dashboard",
	"version": "1.0.0",
	"type": "module",
	"license": "GPL-3.0-only",
	"scripts": {
		"clear": "pnpm -r --if-present clear && rm -rf build dist tsconfig.tsbuildinfo node_modules",
		"dev": "cd packages/app && pnpm dev",
		"check": "pnpm -r --if-present run check",
		"lint": "pnpm -r --if-present run lint",
		"test": "pnpm -r --if-present test",
		"license:headers": "npx @kt3k/license-checker -q"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.1",
		"@kt3k/license-checker": "3.2.2",
		"@types/chroma-js": "^3.1.2",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.5",
		"@types/react-helmet": "^6.1.11",
		"@vitejs/plugin-react-swc": "^4.1.0",
		"@w3ux/types": "^2.4.1",
		"globals": "^16.2.0",
		"prettier": "^3.6.2",
		"prettier-plugin-organize-imports": "^4.1.0",
		"sass": "^1.92.0",
		"typescript": "^5.7.2"
	},
	"pnpm": {
		"overrides": {
			"react-helmet-async>react": "19.1.0",
			"use-sync-external-store>react": "19.1.0"
		},
		"ignoredBuiltDependencies": [
			"unrs-resolver"
		],
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"@swc/core",
			"bufferutil",
			"esbuild",
			"keccak",
			"sharp",
			"unrs-resolver",
			"utf-8-validate"
		]
	},
	"packageManager": "pnpm@10.18.3"
}
